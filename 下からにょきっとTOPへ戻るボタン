      <button  id="topBtn" class="topBtn">TOPへ戻る</button>



.topBtn {
  position: fixed;
  right: 20px;
  bottom: -50px;
  width: 80px;
  height: 32px;
  background: tomato;
  color: #fff;
  border-radius: 10px;
  outline: none;
}
.box {
  height: 500px;
  width: 100%;
  background: skyblue;
}
.box2{
  height: 500px;
  width: 100%;
  background: rgb(236, 252, 203);
}
.box3 {
  height: 500px;
  width: 100%;
  background: rgb(164, 164, 252);
}


$(function(){
        let topBtn = $('#topBtn');
        // ボタン非表示
        // topBtn.hide();
        // 100px スクロールしたらボタン表示
        // $(window).scroll(function () {
        //     if ($(this).scrollTop() > 200) {
        //         topBtn.fadeIn();
        //     } else {
        //         topBtn.fadeOut();
        //          }
        //     });
$(window).scroll(function () {
 let now = $(window).scrollTop();
            console.log(now);
            if(now > 300) {
           topBtn.animate({'bottom': '30px' }, 500);
           } else if (now <= 300) {
           topBtn.animate({'bottom': '-50px' }, 500);
        }
        });
        topBtn.click(function () {
           $('body, html').animate({ scrollTop: 0 }, 500);
           return false;
        });
      });

